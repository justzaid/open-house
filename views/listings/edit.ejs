<%- include('../partials/head') %>
    <div class="container">
        <h1>Editing <%= listing.streetAddress %></h1>
        <form action="/listings/<%= user._id %>/<%= listing._id %>?_method=PUT" method="POST">
        
            <label for="streetAddress">Street Address: </label>
            <input type="text" name="streetAddress" id="streetAddress" value="<%= listing.streetAddress %>">
            
            <label for="city">City: </label>
            <input type="text" name="city" id="city" value="<%= listing.city %>">
            
            <label for="price">Price: </label>
            <input type="number" name="price" id="price" value="<%= listing.price %>">
            
            <label for="size">Size: </label>
            <input type="text" name="size" id="size" value="<%= listing.size %>">
            
            <label for="image">Image: </label>
            <input type="text" name="image" id="imageUrl" value="<%= listing.imgUrl %>">
            
            <button type="submit" class="btn btn-primary">Add Listing</button>

        </form>
    </div>
<%- include('../partials/footer') %>